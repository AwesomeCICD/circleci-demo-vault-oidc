# Export the secrets as env vars for use in this job 
# Also write them to $BASH_ENV so that they'll be available as env vars in subsequent jobs for this pipeline
{{ with secret "secret/circleci-demo/demo-secrets" }}
    export SECRET_VAULT_USERNAME="{{ .Data.data.username }}"
    export SECRET_VAULT_PASSWORD="{{ .Data.data.password }}"
    echo "export SECRET_VAULT_USERNAME=\"{{ .Data.data.username }}\"" >> $BASH_ENV
    echo "export SECRET_VAULT_PASSWORD=\"{{ .Data.data.password }}\"" >> $BASH_ENV
{{ end }}